<h3>  Comments </h3>
    <%= @post.comments.each do|comment|%>
        <div class="well">
            <p>
                <b>
                    <%= comment.username %>
                </b>    
                    : <%= comment.body %> 
                    <%= link_to "Delete", [comment.post, comment], 
                    method: :delete, 
                    data: {confirm: 'Are you sure?'}, 
                    :class => 'btn btn-danger' %>
            </p>
        </div>
    <% end %>